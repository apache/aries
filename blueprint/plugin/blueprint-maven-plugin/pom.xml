        </dependency>
        <dependency>
            <groupId>org.apache.aries.blueprint</groupId>
            <artifactId>blueprint-maven-plugin-spring-handlers</artifactId>
            <version>${blueprint-maven-plugin-spring-handlers.version}</version>
        </dependency>
        <dependency>
